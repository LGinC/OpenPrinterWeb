<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" NotFoundPage="@typeof(OpenPrinterWeb.Components.Pages.NotFound)">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Layout.MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <MudText Typo="Typo.h5" Class="pa-4">You are not authorized to access this page.</MudText>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
    </Router>
</CascadingAuthenticationState>